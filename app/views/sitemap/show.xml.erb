<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
      <loc><%= root_url %></loc>
      <lastmod><%= @last_post.published_at %></lastmod>
      <changefreq>weekly</changefreq>
    </url>
    <% @posts.each do |post| %>
    <url>
      <loc><%= content_url(post) %></loc>
      <lastmod><%= post.published_at %></lastmod>
    </url>
    <% end %>
    <% @pages.each do |page| %>
    <url>
      <loc><%= content_url(page) %></loc>
    </url>
    <% end %>
</urlset>